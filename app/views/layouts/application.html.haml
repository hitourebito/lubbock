!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Lubbock
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .header__siteTitle
        %a{ href: 'http://localhost:3000/', id: 'top' }Lubbock
      .header__image 
      - if user_signed_in?
        .header__button1
          %a{ href: '', class: 'header-button'}メェ〜ルする
        .header__button2
          %a{ href: '', class: 'header-button'}ログアウト
    = yield
